  .content-wrapper
    .container
      .row
        .col-sm-8.col-md-8
          .payment-box
            .payment-header.clearfix
              %h5.heading.mt-0 購入者情報
            .payment-content
              .payment-traveller.mb-0
                .form-horizontal
                  .form-group.gap-20
                    %label.col-sm-4.col-md-4.control-label 姓
                    .col-sm-8.col-md-6
                      %input.form-control{:type => "text", :value => "せきや"}/
                .form-horizontal
                  .form-group.gap-20
                    %label.col-sm-4.col-md-4.control-label 名
                    .col-sm-8.col-md-6
                      %input.form-control{:type => "text", :value => "じょうじ"}/
                .form-horizontal
                  .form-group.gap-20
                    %label.col-sm-4.col-md-4.control-label 郵便番号:
                    .col-sm-8.col-md-6
                      %input.form-control{:type => "text", :value => "150-0042"}/
                .form-horizontal
                  .form-group.gap-20
                    %label.col-sm-4.col-md-4.control-label 住所:
                    .col-sm-8.col-md-6
                      %input.form-control{:type => "text", :value => "東京都渋谷区道玄坂2丁目"}/
              .text-center
                %button.btn.btn-primary.btn-sm.btn-inverse 購入者情報の編集
          .payment-box
            .payment-header.clearfix
              %h5.heading.mt-0 登録情報
            .payment-content
              .payment-traveller.mb-0
                .form-horizontal
                  .form-group.gap-20
                    %label.col-sm-4.col-md-4.control-label メールアドレス:
                    .col-sm-8.col-md-6
                      %input.form-control{:type => "email", :value => "jeorge_sekiya@hoge.com"}/
                .form-horizontal
                  .form-group.gap-20
                    %label.col-sm-4.col-md-4.control-label 現在のパスワード:
                    .col-sm-8.col-md-6
                      %input.form-control{:type => "password", :value => ""}/
                .form-horizontal
                  .form-group.gap-20
                    %label.col-sm-4.col-md-4.control-label 新しいパスワード:
                    .col-sm-8.col-md-6
                      %input.form-control{:type => "password", :value => ""}/
              .text-center
                %button.btn.btn-primary.btn-sm.btn-inverse 登録情報の編集
        .col-sm-4.col-md-4.mt-50-xs

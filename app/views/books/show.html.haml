/ start Main Wrapper
.main-wrapper.scrollspy-container
  / start end Page title
  .page-title.detail-page-title
    .container
      .flex-row
        .flex-column.flex-md-8.flex-sm-12
          %h1.hero-title= @book.title
          %p.line18 WEB制作のプロが教えるLPの考え方、設計、コーディング、コンテンツ制作ガイド
        .flex-column.flex-md-4.flex-align-bottom.flex-sm-12.mt-20-sm
          .text-right.text-left-sm
            = link_to "購入ページへ", new_book_dealing_path(@book), class: "anchor btn btn-primary"
  / end Page title
  .breadcrumb-wrapper.bg-light-2
    .container
      %ol.breadcrumb-list
        %li
          = link_to "Home", root_path
        %li
          %span= @book.title
  .content-wrapper
    .container
      .row
        .col-sm-3.col-xs-12.mb-50-xs
          .scrollspy-sidebar.sidebar-detail{:role => "complementary"}
            = image_tag @book.image, alt: @book.title
        .col-md-9.mt-30-xs{:role => "main"}
          .detail-content-wrapper
            #section-0.detail-content
              .section-title.text-left
                %h4 概要
              %h5.heading= @book.title
              %h5.price.mt-0
                合計金額:
                %span= " #{@book.price}円"
            %hr.section-line
            #section-2.detail-content
              .section-title.text-left
                %h4 詳細
              .detail-item
                .row
                  .col-sm-4.col-sm-3
                    %ul.list-info.no-icon.bb-dotted
                      %li
                        %span.font600 出品者:
                        %a{:href => "#"} せきやじょうじ
                      %li
                        %span.font600 本体価格:
                        = "#{@book.price - @book.postage}円"
                      %li
                        %span.font600 送料:
                        = "#{@book.postage}円"
                      %li
                        %span.font600 カテゴリ:
                        = @book.category_list
                      %li
                        %span.font600 状態:
                        = @book.state
                  .col-sm-8.col-md-9
                    .itinerary-wrapper
                      .itinerary-item
                        %h5.mb-20 この本について
                        .intro-item-body
                          %p= @book.detail
                .text-center.pt-10
                  = link_to "購入ページへ", new_book_dealing_path(@book), class: "btn btn-primary btn-full-width"

.GridLex-col-3_sm-4_xs-12.mb-30
  .package-grid-item
    = link_to book_path(book) do
      .image
        = image_tag book.image, alt: book.title
    .absolute-in-image.clearfix.tag-container
      - book.category_list.each do |category_tag|
        .duration.tag-float
          %span= link_to category_tag, books_search_path(category: category_tag), class: "tag-color"
    .content.clearfix
      %h5= book.title
      .rating-wrapper
        .raty-wrapper
          .star-rating-read-only{"data-rating-score" => "4.0"}
          %span / 7 review
      .absolute-in-content
        %span.btn
          %i.fa.fa-heart-o
        .price
          = book.price

.pl-0.ml-0.flex-display.flex-3
  .package-list-item.width100.pos-rel
    = link_to book_path(book) do
      .image
        = image_tag book.image, alt: book.title
    .absolute-in-image
      - if book.buyer.present?
        = image_tag "sold3.svg", class: "sold-out"
    .content
      .row.gap-10
        .col-sm-12.col-md-12
          %h5
            = book.title
            = render "books/favorite", book: book
          %p.line18.hidden-text= book.detail
        .col-sm-12.col-md-12.text-left-sm
          .price
            #{book.price}å††
        %p.font12.text-light
          - book.category_list.each do |category_tag|
            %span.tag-link= link_to category_tag, books_database_path(category: category_tag), class: "tag-color"

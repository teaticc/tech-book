.clear
/ start Main Wrapper
.main-wrapper.scrollspy-container
  / start end Page title
  .page-title.page-title--user
    .container
      .row
        .col-sm-10.col-sm-offset-1.col-md-6.col-md-offset-3
          %h2.text-white= current_user.nickname
          .user-thumbnail.mb-10{:style => "background-image:url('/assets/sekiya.jpeg');"}
  / end Page title
  .content-wrapper
    .container
      .row
        .col-sm-8.col-md-8
          .payment-box
            .payment-header.clearfix
              %h4.heading.mt-0 出品する
            .payment-content
              .payment-traveller.mb-0
                = form_for @book, class: "form-horizontal" do |f|
                  .form-horizontal
                    .form-group.gap-20
                      = f.label :title, class: "col-sm-4 col-md-4 control-label" do
                        %span.necessary-info> *
                        タイトル:
                      .col-sm-8.col-md-6
                        = f.text_field :title, class: "form-control"
                  .form-horizontal
                    .form-group.gap-20
                      = f.label :price, class: "col-sm-4 col-md-4 control-label" do
                        %span.necessary-info> *
                        価格:
                      .col-sm-8.col-md-6
                        = f.number_field :price, class: "form-control"
                  .form-horizontal
                    .form-group.gap-20
                      = f.label :postage, class: "col-sm-4 col-md-4 control-label" do
                        %span.necessary-info> *
                        送料:
                      .col-sm-8.col-md-6
                        = f.number_field :postage, class: "form-control"
                  .form-horizontal
                    .form-group.gap-20
                      = f.label :state, "状態:", class: "col-sm-4 col-md-4 control-label"
                      .col-sm-8.col-md-6
                        = f.text_field :state, class: "form-control"
                  .form-horizontal
                    .form-group.gap-20
                      = f.label :detail, "詳細:", class: "col-sm-4 col-md-4 control-label"
                      .col-sm-8.col-md-6
                        = f.text_area :detail, class: "form-control"
                  .form-horizontal
                    .form-group.gap-20
                      = f.label :image, "画像:", class: "col-sm-4 col-md-4 control-label"
                      .col-sm-8.col-md-6
                        = f.file_field :image, class: "form-control"
                  .text-center
                    = f.submit "出品", class: "btn btn-primary btn-bg btn-lg"
        .col-sm-4.col-md-4.mt-50-xs
          %aside.sidebar
            .sidebar-inner.no-border.for-blog
              .clear
              .sidebar-module
                %h4.sidebar-title 出品中の本
                .sidebar-module-inner
                  %ul.sidebar-post
                    - if current_user.seller_books.present?
                      = render partial: "onSale", collection: current_user.seller_books, as: :book
                    - else
                      %p 現在出品中の本はありません

